# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_TITLE="AI Content Generation Service"
API_VERSION="1.0.0"

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/ai_content_db
DATABASE_ECHO=false

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=ai-content-storage
S3_ENDPOINT_URL=

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379/0

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_WEBHOOK_URL=

# AI Models Configuration
FLUX_MODEL_PATH=black-forest-labs/FLUX.1-dev
VLM_MODEL_PATH=Qwen/Qwen2-VL-72B-Instruct
LLM_MODEL_PATH=Qwen/Qwen2.5-32B-Instruct

# LoRA Training Configuration
LORA_RANK=16
LORA_ALPHA=16
LEARNING_RATE=1e-4
BATCH_SIZE=32
TRAINING_STEPS=1000

# FLUX Specific Configuration
FLUX_LORA_RANK=16
FLUX_LORA_ALPHA=16
FLUX_LEARNING_RATE=1e-4
FLUX_BATCH_SIZE=1
FLUX_EPOCHS=1
FLUX_MAX_SEQUENCE_LENGTH=512
FLUX_CLIP_MAX_LENGTH=77

# Training Optimization
QUANTIZE_TEXT_ENCODERS=true
LOW_VRAM_MODE=false
GRADIENT_CHECKPOINTING=true
MIXED_PRECISION=true

# Training Parameters
GRADIENT_CLIP_NORM=1.0
WEIGHT_DECAY=0.01
WARMUP_STEPS=100
SAVE_CHECKPOINT_EVERY=500
LOG_EVERY=100

# Flow Matching Configuration
FLOW_MATCHING_TIMESTEPS=1000
NOISE_OFFSET=0.0

# Image Generation Configuration
DEFAULT_IMAGE_SIZE=(1024, 1024)
MAX_IMAGES_PER_REQUEST=4

# Security
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log 